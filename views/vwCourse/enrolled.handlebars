{{#section "styles"}}
  <link rel="stylesheet" href="/static/home.css" />
{{/section}}

<main class="pb-5">

  <!-- HERO CAROUSEL -->

  <!-- FEATURED -->
  <section class="py-5">
    <div class="container">
      <div class="section-heading text-center mb-5">
        <small>Featured</small>
        {{#if empty}}
        <div class="row">
        <h2 class="display-6">You haven't bought any courses!</h2>
        </div>
        {{else}}
        <h2 class="display-6">Your courses</h2>
        <p class="text-muted mb-0"></p>
      </div>

      <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="row g-4">
                {{#each courses}}
                <div class="col-md-6 col-xl-4 d-flex justify-content-center">
                    <div class="card" style="width: 18rem;">
                    {{#if thumbnail}}
                      <img src="{{thumbnail}}" alt="{{title}}" class="img-fluid w-100 h-100">
                    {{else}}
                      <img src="/static/imgs/course/{{courseid}}/main.jpg" alt="{{title}}" class="img-fluid w-100 h-100">
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{tinydes}}</p>
                    </div>
                    <div class="card-footer">
                        <a
                        href="/course/{{courseid}}"
                        class="btn btn-sm btn-outline-primary"
                        >
                        <i class="bi bi-eye"></i>
                        View details
                        </a>
                        <a
                        href="/course/lesson?courseid={{courseid}}"
                        class="btn btn-sm btn-outline-primary"
                        >
                        <i class="bi bi-eye"></i>
                        View Lessons
                        </a>
                        <form action="/account/del-enroll" method="post" style="display:inline;">
                        <input type="hidden" name="courseid" value="{{courseid}}">
                        <button class="btn btn-sm btn-outline-danger" type="submit">
                            <i class="bi bi-trash"></i> Remove
                        </button>
                        </form>
                    </div>
                    <div class="p-3 border-top">
      <form action="/course/{{courseid}}/feedback" method="post">
        <select name="rating" class="form-select form-select-sm mb-2">
          <option value="5">★★★★★</option>
          <option value="4">★★★★☆</option>
          <option value="3">★★★☆☆</option>
          <option value="2">★★☆☆☆</option>
          <option value="1">★☆☆☆☆</option>
        </select>

        <textarea name="comment" class="form-control form-control-sm mb-2" placeholder="Nhận xét (tuỳ chọn)"></textarea>

        <button type="submit" class="btn btn-primary btn-sm w-100">Gửi đánh giá</button>
      </form>
    </div>
                </div>
              </div>
                {{/each}}
                {{/if}}
            </div>
                    <nav aria-label="..." class="mt-3">
        <ul class="pagination">
            <li class="page-item {{#if isFirstPage}}disabled{{/if}}">
            <a class="page-link" href="/account/enrolled?page={{prevPage}}" tabindex="-1">Previous</a>
            </li>
            {{#each pages}}
            {{#if isCurrent}}
                <li class="page-item active" aria-current="page">
                <a class="page-link" href="javascript:void(0);">
                    {{value}}
                </a>
                </li>
            {{else}}
                <li class="page-item">
                <a class="page-link" href="/account/enrolled?page={{value}}">
                    {{value}}
                </a>
                </li>
            {{/if}}
            {{/each}}
            <li class="page-item {{#if isLastPage}}disabled{{/if}}">
            <a class="page-link" href="/account/enrolled?page={{nextPage}}">Next</a>
            </li>
        </ul>
        </nav>
          </div>
        </div>
        
      </div>
    </div>
  </section>


</main>