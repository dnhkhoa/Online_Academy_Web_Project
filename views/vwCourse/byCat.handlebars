{{#section "styles"}}
<link rel="stylesheet" href="/static/byCat.css" />
{{/section}}

<section class="py-5">
  <div class="container">
    <div class="row g-4">
      <aside class="col-lg-3">
        <div class="card shadow-sm border-0 rounded-4">

          <!-- Sidebar: Categories (L1) -> Subcategories (L2) -> Courses -->
          <div class="accordion" id="categoryAccordion">
            <h5 class="text text-uppercase medium mb-3 px-3 pt-3">List of courses</h5>

            {{!-- [CHANGED] L·∫∑p L1 parents --}}
            {{#each parents}}
            <div class="accordion-item">
              <h2 class="accordion-header" id="heading-{{this.catid}}">
                <div class="header-content">
                  <button class="accordion-button collapsed flex-grow-1" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapse-{{this.catid}}" aria-expanded="false"
                    aria-controls="collapse-{{this.catid}}">
                    {{this.catname}}
                  </button>
                </div>
              </h2>
              <div id="collapse-{{this.catid}}" class="accordion-collapse collapse"
                aria-labelledby="heading-{{this.catid}}" data-bs-parent="#categoryAccordion">
                <div class="accordion-body p-0">
                  <div class="accordion accordion-flush ms-3" id="subAccordion-{{this.catid}}">
                    {{!-- [CHANGED] L·∫∑p L2 t·ª´ childrenMap[parentId] --}}
                    {{#each (lookup ../childrenMap this.catid)}}
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="sub-heading-{{this.catid}}">
                        <a class="accordion-button collapsed py-2 text-decoration-none"
                          href="/course/byCat?catid={{this.catid}}">
                          {{this.catname}}
                        </a>
                      </h2>
                    </div>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
            {{!-- /parents --}}
          </div>
          <!-- /Sidebar -->

        </div>
      </aside>

      <div class="col-lg-9">
        <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-4">
          <div>
            <h2 class="h4 fw-semibold mb-1">
              {{#if category}}Courses in {{category.catname}}{{else}}All Courses{{/if}}
            </h2>
          </div>
          <div class="dropdown">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownInstructor"
              data-bs-toggle="dropdown" aria-expanded="false">
              L·ªçc gi·∫£ng vi√™n
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownInstructor"
              style="max-height: 280px; overflow-y: auto;">
              <li>
                <a class="dropdown-item {{#unless currentInstructor}}active{{/unless}}" href="/course/byCat">
                  T·∫•t c·∫£ gi·∫£ng vi√™n
                </a>
              </li>
              {{#each instructors}}
              <li>
                <a class="dropdown-item {{#if (eq ../currentInstructor this.userid)}}active{{/if}}"
                  href="/course/byCat?instructorid={{this.userid}}">
                  {{this.full_name}}
                </a>
              </li>
              {{/each}}
            </ul>
          </div>
          <form method="get" class="ms-auto d-flex align-items-center gap-2">
            {{#if category}}
            <input type="hidden" name="catid" value="{{category.catid}}" />
            {{/if}}
            <label for="sortSelect" class="form-label mb-0 me-1">Sort by:</label>
            <select id="sortSelect" name="sort" class="form-select form-select-sm" onchange="this.form.submit()">
              <option value="">Default</option>
              <option value="rating">Rating</option>
              <option value="newest">Newest</option>
            </select>
          </form>
          <script>
            (function () {
              var sel = document.getElementById('sortSelect');
              if (sel) sel.value = '{{sort}}';
            })();
          </script>
        </div>


        <div class="row g-4">
          {{!-- [CHANGED] L·∫∑p courses --}}
          {{#each courses}}
          <div class="col-md-6 col-xl-4 d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
              <img
                src="{{#if this.thumbnail}}{{this.thumbnail}}{{else}}/static/imgs/course/{{this.courseid}}/main_thumbs.jpg{{/if}}"
                class="card-img-top" alt="{{this.title}}"
                onerror="this.onerror=null;this.src='/static/imgs/placeholder.jpg';" />

              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{tinydes}}</p>
                {{#if this.isTopView}}
                <span class="badge text-bg-warning">üî• Top Viewed</span>
                {{/if}}
                {{#if this.isTopEnroll}}
                <span class="badge text-bg-primary">‚≠ê Top Enrolled</span>
                {{/if}}
              </div>
              <div class="card-footer">
                <a href="/course/{{this.courseid}}" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i> View Details
                </a>
                <form action="/account/add-cart" method="post">
                  <input type="hidden" name="courseid" value="{{this.courseid}}" />
                  <button type="submit" class="btn btn-sm btn-outline-success">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                  </button>
                </form>
                <form action="/account/add" method="post">
                  <input type="hidden" name="courseid" value="{{this.courseid}}" />
                  <button type="submit" class="btn btn-sm btn btn-outline-danger">
                    <i class="bi bi-heart"></i> Add to watchlist
                  </button>
                </form>
                {{{renderStars fbAvg}}}
              </div>
            </div>
          </div>
          {{/each}}
          <nav aria-label="..." class="mt-3">
            <ul class="pagination">
              <li class="page-item 
            {{#if isFirstPage}}disabled{{/if}}">
                <a class="page-link" href="/course/byCat?page={{prevPage}}&sort={{sort}}" tabindex="-1">Previous</a>
              </li>
              {{#each pages}}
              {{#if isCurrent}}
              <li class="page-item active" aria-current="page">
                <a class="page-link" href="javascript:void(0);">
                  {{value}}
                </a>
              </li>
              {{else}}
              <li class="page-item">
                <a class="page-link" href="/course/byCat?page={{value}}&sort={{../sort}}">
                  {{value}}
                </a>
              </li>
              {{/if}}
              {{/each}}
              <li class="page-item {{#if isLastPage}}disabled{{/if}}">
                <a class="page-link" href="/course/byCat?page={{nextPage}}&sort={{sort}}">Next</a>
              </li>
            </ul>
          </nav>
          {{!-- N·∫øu kh√¥ng c√≥ course --}}
          {{#unless courses.length}}
          <div class="col-12">
            <div class="alert alert-warning">No courses found.</div>
          </div>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
</section>