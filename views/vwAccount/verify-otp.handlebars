{{#section "styles"}}
<script src="/static/otp.css"></script>
{{/section}}

<section class="otp-section">
  <div class="card otp-card">
    <div class="card-body text-center">
      <div class="mb-3">
        <i class="bi bi-shield-lock fs-1 text-primary"></i>
      </div>
      <h4 class="mb-3 fw-semibold">Verify Your OTP</h4>
      <p class="text-muted mb-4">
        Weâ€™ve sent a 6-digit verification code to your email or phone.  
        Please enter it below to continue.
      </p>

      <form method="POST" action="/account/verify-otp" class="text-center">
        <div class="mb-3">
          <input
            type="text"
            name="otp"
            class="form-control otp-input"
            maxlength="6"
            placeholder="Enter OTP"
            required
          />
        </div>

        {{#if error}}
        <p class="text-danger small mb-3">{{error}}</p>
        {{/if}}

        <button type="submit" class="btn btn-primary w-100 py-2">
          <i class="bi bi-check-circle me-1"></i> Verify
        </button>
      </form>
    </div>
  </div>
</section>
