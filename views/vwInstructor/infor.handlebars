      <!-- Info + Contact -->
      <div class="col-lg-8">
        {{#if updated}}
          <div class="alert alert-success">Cập nhật hồ sơ thành công.</div>
        {{/if}}
        <!-- Basic Info -->
        <div class="card card-rounded mb-4">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h5 class="card-title mb-0">Basic Information</h5>

            </div>
            <form method="post" action="/instructor/infor">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Full name</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nguyen Van A"
                    value = "{{fullname.instructorName}}"
                    readonly
                  />

                </div>
                <div class="col-md-6">
                  <label class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    placeholder="nguyenvana@gmail.com"
                    value = "{{email.instructorEmail}}"
                    readonly
                  />
                  
                </div>
                <div class="col-md-6">
                  <label class="form-label">Date of birth</label>
                  <input type="date" class="form-control" name="birthday" value="{{birthdayValue}}" />
                    
                </div>
                <div class="col-12">
                  <label class="form-label">Description</label>
                  <textarea class="form-control" name="description" rows="3" placeholder="Giới thiệu về bản thân...">{{instructor.description}}</textarea>
                </div>
              </div>
            
          
        
          </div>
        </div>

        <!-- Contact Info -->
        <div class="card card-rounded">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h5 class="card-title mb-0">Contact Information</h5>

            </div>

            
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Phone</label>
                  <input
                    type="tel"
                    class="form-control"
                    placeholder="+84 123 456 789"
                    name="phone"
                    value="{{instructor.phone}}"
                  />
                  
                </div>

                <div class="col-12">
                  <label class="form-label">Address</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="1, Vo Van Ngan, Thu Duc"
                    name="address"
                    value="{{instructor.address}}"
                  />
                  
                </div>
                <div class="col-md-4">
                  <label class="form-label">City</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Ho Chi Minh City"
                    name="city"
                    value="{{instructor.city}}"
                  />
                    
                </div>

                <div class="col-md-4">
                  <label class="form-label">Country</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Viet Nam"
                    name="country"
                    value ="{{instructor.country}}"
                  />
                    
                </div>
              </div>
            
          </div>
        </div>
        <div class="d-flex justify-content-end mt-4">
              <button type="reset" class="btn btn-light me-2">
                <i class="bi bi-arrow-counterclockwise me-1"></i>
                Reset
              </button>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-check2"></i>
                Save
              </button>
            </div>
            </form>
