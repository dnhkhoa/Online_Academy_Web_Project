                  <div class="small text-muted">Email:
                    <a
                      href="mailto:privacy@onlineacademy.example"
                    >privacy@onlineacademy.example</a></div>
                  <div class="small text-muted">Address: Online Academy –
                    Legal/Privacy, 123 Academy Street, District 1, Ho Chi Minh
                    City, VN</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="p-3 bg-light rounded-3 h-100">
                  <div class="fw-semibold mb-1">Data Requests</div>
                  <div class="small text-muted">To access, correct, or delete
                    your data, please use your
                    <a href="/account/settings">Account Settings</a>
                    or contact us.</div>
                </div>
              </div>
            </div>

            <hr class="my-4" />
            <p class="small text-muted mb-0">Any capitalized term not defined
              here has the meaning in our
              <a href="/legal/terms">Terms of Service</a>.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{#section "scripts"}}
  <script>
    // Minimal "active section" highlight for TOC (function(){ const links =
    Array.from(document.querySelectorAll('#toc a')); const targets = links.map(a
    => document.querySelector(a.getAttribute('href'))).filter(Boolean); const
    onScroll = () => { const y = window.scrollY + 120; // offset for fixed
    header let current = null; targets.forEach(sec => { if (sec.offsetTop <= y)
    current = sec; }); links.forEach(a => a.classList.toggle('active', current
    && a.getAttribute('href') === '#' + current.id)); };
    document.addEventListener('scroll', onScroll, {passive:true}); onScroll();
    })();
  </script>
