<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Online Academy</title>

    <!--Bootstrap-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <!--Bootstrap icons-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />

    <link rel="stylesheet" href="/static/main.css" />

    {{{_sections.styles}}}
  </head>
  <body class="bg-white text-body">
    <header
      class="border-bottom bg-white site-header sticky-header"
      role="banner"
    >
      <div
        class="container py-3 py-lg-4 d-flex align-items-center justify-content-between"
      >
        <a
          href="/"
          class="text-decoration-none text-dark fs-4 fs-lg-2 fw-semibold"
        >
          Online Academy
        </a>

        <nav
          class="d-none d-lg-flex gap-4 align-items-center"
          role="navigation"
          aria-label="Primary"
        >
          <a
            href="/course/byCat"
            class="text-decoration-none text-dark"
          >Courses</a>
          <a
            href="/admin/categories/list"
            class="text-decoration-none text-dark"
          >Categories</a>
          <a href="#" class="text-decoration-none text-dark">Learn</a>
          <div class="dropdown">
            <a
              href="#"
              class="text-decoration-none text-dark dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Explore
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">All courses</a></li>
              <li><a class="dropdown-item" href="#">Learning paths</a></li>
              <li><a class="dropdown-item" href="#">Workshops</a></li>
            </ul>
          </div>
        </nav>

        <div class="d-none d-lg-flex gap-2">
          <a
            href="/account/signup"
            class="btn btn-outline-dark rounded-pill px-4"
          >Signup</a>
          <a
            href="/account/signin"
            class="btn btn-dark rounded-pill px-4"
          >Login</a>
        </div>

        <button
          class="btn btn-outline-secondary d-lg-none rounded-circle"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#mobileNav"
          aria-controls="mobileNav"
          aria-label="Open menu"
        >
          <i class="bi bi-list"></i>
        </button>
      </div>
    </header>

    <!-- Mobile off-canvas -->
    <div
      class="offcanvas offcanvas-end"
      tabindex="-1"
      id="mobileNav"
      aria-labelledby="mobileNavLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="mobileNavLabel">Menu</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body d-flex flex-column gap-3">
        <a
          href="/course/byCat"
          class="text-decoration-none text-dark"
        >Courses</a>
        <a
          href="/admin/categories/list"
          class="text-decoration-none text-dark"
        >Categories</a>
        <a href="#" class="text-decoration-none text-dark">Learn</a>
        <a href="#" class="text-decoration-none text-dark">Explore</a>
        <div class="d-flex gap-2">
          <a
            href="/account/signup"
            class="btn btn-outline-dark flex-grow-1"
          >Signup</a>
          <a href="/account/signin" class="btn btn-dark flex-grow-1">Login</a>
        </div>
      </div>
    </div>

    {{{body}}}

    <!-- Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>

    {{{_sections.scripts}}}
  </body>
</html>