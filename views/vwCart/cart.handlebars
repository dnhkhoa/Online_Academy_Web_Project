{{! Static UI – English }}
{{#section "styles"}}
  <link rel="stylesheet" href="/static/cart.css" />
{{/section}}

<section class="py-5">
  <div class="container">

    <div class="row g-4">
      <div class="col-lg-8">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h4 class="mb-0">Shopping Cart</h4>
          <span class="text-muted small">3 courses</span>
        </div>

        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-header border-0 p-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="selectAll" />
              <label class="form-check-label fw-medium" for="selectAll">Select
                all</label>
            </div>
          </div>

          <ul class="list-group list-group-flush cart-list">
            <!-- Item 1 -->
            <li
              class="list-group-item p-3 cart-item"
              data-id="101"
              data-price="39.9"
              data-currency="USD"
            >
              <div class="row g-3 align-items-center">
                <div class="col-auto">
                  <input
                    class="form-check-input item-check"
                    type="checkbox"
                    aria-label="Select course"
                  />
                </div>
                <div class="col-auto">
                  <a href="#"><img
                      src="https://picsum.photos/seed/aws-course/640/420"
                      class="rounded img-thumb"
                      alt="course-1"
                    /></a>
                </div>
                <div class="col">
                  <a href="#" class="stretched-link text-decoration-none">
                    <h6 class="mb-1">Node.js from Zero to Hero (SAMPLE)</h6>
                  </a>
                  <div class="text-muted small">Instructor: John Doe · Beginner</div>
                  <div class="mt-1">

                  </div>
                </div>
                <div class="col-auto text-end">
                  <div
                    class="text-decoration-line-through small text-muted mb-1"
                  >$79.90</div>
                  <div class="fw-semibold price">$39.90</div>
                  <div class="mt-2 d-flex gap-2 justify-content-end">
                    <button
                      class="btn btn-outline-danger btn-sm"
                      type="button"
                      title="Remove"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </li>

            <!-- Item 2 -->
            <li
              class="list-group-item p-3 cart-item"
              data-id="102"
              data-price="24.9"
              data-currency="USD"
            >
              <div class="row g-3 align-items-center">
                <div class="col-auto">
                  <input class="form-check-input item-check" type="checkbox" />
                </div>
                <div class="col-auto">
                  <a href="#"><img
                      src="https://picsum.photos/seed/aws-course/640/420"
                      class="rounded img-thumb"
                      alt="course-2"
                    /></a>
                </div>
                <div class="col">
                  <a href="#" class="stretched-link text-decoration-none">
                    <h6 class="mb-1">React Essentials (SAMPLE)</h6>
                  </a>
                  <div class="text-muted small">Instructor: Jane Smith ·
                    Intermediate</div>
                </div>
                <div class="col-auto text-end">
                  <div class="fw-semibold price">$24.90</div>
                  <div class="mt-2 d-flex gap-2 justify-content-end">

                    <button
                      class="btn btn-outline-danger btn-sm"
                      type="button"
                      title="Remove"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </li>

            <!-- Item 3 -->
            <li
              class="list-group-item p-3 cart-item"
              data-id="103"
              data-price="34.9"
              data-currency="USD"
            >
              <div class="row g-3 align-items-center">
                <div class="col-auto">
                  <input class="form-check-input item-check" type="checkbox" />
                </div>
                <div class="col-auto">
                  <a href="#"><img
                      src="https://picsum.photos/seed/aws-course/640/420"
                      class="rounded img-thumb"
                      alt="course-3"
                    /></a>
                </div>
                <div class="col">
                  <a href="#" class="stretched-link text-decoration-none">
                    <h6 class="mb-1">Practical SQL (SAMPLE)</h6>
                  </a>
                  <div class="text-muted small">Instructor: Alex Nguyen · All
                    levels</div>
                </div>
                <div class="col-auto text-end">
                  <div class="fw-semibold price">$34.90</div>
                  <div class="mt-2 d-flex gap-2 justify-content-end">

                    <button
                      class="btn btn-outline-danger btn-sm"
                      type="button"
                      title="Remove"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>

        <div class="mt-3 d-flex gap-2">
          <a href="/course/byCat" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>
            Continue shopping
          </a>
          <button class="btn btn-outline-danger ms-auto" type="button">
            <i class="bi bi-trash3 me-1"></i>
            Clear all
          </button>
        </div>
      </div>

      <aside class="col-lg-4">
        <div class="card shadow-sm border-0 rounded-4 position-sticky top-20">
          <div class="card-body">
            <h5 class="card-title mb-3">Order Summary</h5>

            <div class="d-flex justify-content-between small mb-2">
              <span>Selected courses</span>
              <span id="selectedCount">0</span>
            </div>
            <div class="d-flex justify-content-between small mb-2">
              <span>Subtotal</span>
              <span id="subtotal">$0.00</span>
            </div>
            <div class="d-flex justify-content-between small mb-2">
              <span>Discount</span>
              <span id="discount">$0.00</span>
            </div>
            <div class="d-flex justify-content-between small mb-2">
              <span>Tax</span>
              <span id="tax">$0.00</span>
            </div>
            <hr />
            <div class="d-flex justify-content-between fw-semibold mb-3">
              <span>Total</span>
              <span id="grandTotal">$0.00</span>
            </div>

            <div class="mb-3">
              <label for="coupon" class="form-label small">Coupon code</label>
              <div class="input-group">
                <input
                  id="coupon"
                  type="text"
                  class="form-control"
                  placeholder="ENTERCODE…"
                />
                <button
                  class="btn btn-outline-secondary"
                  type="button"
                  id="applyCoupon"
                >Apply</button>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label small">Payment method</label>
              <div class="list-group">
                <label class="list-group-item">
                  <input
                    class="form-check-input me-2"
                    type="radio"
                    name="payment_method"
                    value="momo"
                    checked
                  />
                  <i class="bi bi-qr-code me-1"></i>
                  MoMo QR
                </label>
                <label class="list-group-item">
                  <input
                    class="form-check-input me-2"
                    type="radio"
                    name="payment_method"
                    value="vnpay"
                  />
                  VNPay
                </label>
                <label class="list-group-item">
                  <input
                    class="form-check-input me-2"
                    type="radio"
                    name="payment_method"
                    value="card"
                  />
                  Credit/Debit Card
                </label>
              </div>
            </div>

            <button
              id="btnCheckout"
              class="btn btn-primary w-100 btn-lg"
              type="button"
            >
              Proceed to checkout
            </button>
            <p class="small text-muted mt-3 mb-0">
              By clicking “Proceed to checkout”, you agree to our Terms of
              Service and Refund Policy.
            </p>
          </div>
        </div>
      </aside>
    </div>
  </div>
</section>